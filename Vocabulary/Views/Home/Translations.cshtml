@model IEnumerable<Vocabulary.Models.Language>

@{
    ViewBag.Title = "Языки, доступные для перевода";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LanguageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.LanguageId, "EditLanguage", new { id = item.LanguageId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activity)
        </td>
        <td>
            @Html.ActionLink("Перейти к переводу", "Translation", new { id=item.LanguageId })
        </td>
    </tr>
}

</table>
