@model IEnumerable<Vocabulary.Models.Template>

@{
    ViewBag.Title = "Список слов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Новое слово", "CreateTemplate", null, new { @class = " glyphicon glyphicon-pencil text-warning" })
</p>
<h4 class="text-danger">@Session["TemplateMessage"]</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TemplateMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TemplateMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditTemplate", new { id = item.TemplateId }, new { @class = "glyphicon glyphicon-edit" }) |
            @Html.ActionLink("Удалить", "DeleteTemplate", new { id = item.TemplateId }, new { @class = "glyphicon glyphicon-remove text-danger" })
        </td>
    </tr>
}
</table>
@{ Session["TemplateMessage"] = ""; }
