@model IEnumerable<Vocabulary.Models.PopularWord>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WordId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @using (Ajax.BeginForm("TranslateWord", new AjaxOptions { OnSuccess = "OnSuccess" }))
                {
                    <input type="hidden" class="form-control" id="search" name="search" value=@item.WordId>
                    <button class="btn btn-success" type="submit">@item.WordId</button>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
        </tr>
    }
</table>
