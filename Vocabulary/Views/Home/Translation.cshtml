@model List<Vocabulary.Models.Translation>

@{
    ViewBag.Title = "Переводы для языка";
}

<h2>@ViewBag.Title (@ViewBag.LanguageTitle)</h2>
@using (Html.BeginForm())
{
<table class="table">
    <tr>
        <th>
            Слово
        </th>
        <th>
            Перевод
        </th>
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        @Html.HiddenFor(m => m[i].LanguageId)
        <td>
            @Html.EditorFor(m => m[i].MessageId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </td>
        <td>
            @Html.EditorFor(m => m[i].MessageTranslation, new { htmlAttributes = new { @class = "form-control" } })
        </td>
    </tr>
}

</table>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</div>
<hr />
}
