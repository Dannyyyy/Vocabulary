@model IEnumerable<Vocabulary.Models.Language>

@{
    ViewBag.Title = "Languages";
}

<h2>Languages</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LanguageDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LanguageId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LanguageId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LanguageId })
            </td>
        </tr>
    }

</table>
